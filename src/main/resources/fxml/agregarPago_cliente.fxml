<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="430.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AgregarPago_clienteController">
    
    <stylesheets>
        <URL value="@../styles/clientes.css" />
    </stylesheets>
    
    <children>
        <!-- Contenedor principal -->
        <AnchorPane fx:id="contenedorFormulario" layoutX="50.0" layoutY="30.0" prefHeight="340.0" prefWidth="500.0" styleClass="contenedor" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                
                <!-- Título con fecha -->
                <Label fx:id="lblFecha" layoutY="20.0" styleClass="titulo" text="dd/mm/aaaa" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                    <font>
                        <Font size="32.0" />
                    </font>
                </Label>
                
                <!-- Dinero a ingresar -->
                <Label fx:id="lblDineroIngresar" layoutX="30.0" layoutY="100.0" styleClass="medioPago" text="Dinero a ingresar:" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="100.0">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                
                <TextField fx:id="txtDineroIngresar" layoutX="30.0" layoutY="130.0" prefHeight="35.0" prefWidth="440.0" promptText="Ingrese el monto..." styleClass="campo-texto" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="130.0">
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>
                
                <!-- Medio de pago -->
                <Label fx:id="lblMedioPago" layoutX="30.0" layoutY="190.0" styleClass="medioPago" text="Medio de pago:" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="190.0">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                
                <ComboBox fx:id="cmbMedioPago" layoutX="30.0" layoutY="220.0" prefHeight="35.0" prefWidth="440.0" promptText="Seleccione medio de pago..." styleClass="combo-pago" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="220.0">
                </ComboBox>
                <!-- Observación -->
                <Label fx:id="lblObservacion" layoutX="30.0" layoutY="270.0" styleClass="medioPago" text="Observación:" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="270.0">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>

                <TextField fx:id="txtObservacion" layoutX="30.0" layoutY="300.0" prefHeight="35.0" prefWidth="440.0" promptText="Ingrese una observación..." styleClass="campo-texto" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="300.0">
                    <font>
                        <Font size="16.0" />
                    </font>
                </TextField>

                <!-- Botones -->
                <Button fx:id="btnConfirmar" layoutX="108.0" layoutY="384.0" onAction="#cerrarOverlay" prefHeight="35.0" prefWidth="100.0" styleClass="boton" text="Confirmar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="108.0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                
                <Button fx:id="btnCancelar" layoutX="280.0" layoutY="280.0" onAction="#cerrarOverlay" prefHeight="35.0" prefWidth="100.0" styleClass="boton" text="Cancelar" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="120.0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                
            </children>
        </AnchorPane>
        
    </children>
</AnchorPane>
