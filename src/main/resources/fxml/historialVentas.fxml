                        <Button mnemonicParsing="false" onAction="#mostrarTodasLasVentas" styleClass="boton" text="Mostrar todas las ventas" />
                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#buscarVentasPorFiltro" styleClass="boton" text="Aplicar filtros" GridPane.columnIndex="4" GridPane.rowIndex="1" />
