                  <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="30.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Buscar por fecha particular:" />
                  <DatePicker fx:id="datePickerfecha" onAction="#buscarVentasPorFecha" prefWidth="202.0" GridPane.columnIndex="1" />
                  
                  <Label text="Filtrar desde:" GridPane.columnIndex="2" />
