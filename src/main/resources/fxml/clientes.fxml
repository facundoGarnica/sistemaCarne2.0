<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="1080.0" prefWidth="1620.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientesController">
    <stylesheets>
        <URL value="@../styles/clientes.css" />
    </stylesheets>
    
    <children>
        <!-- Título principal -->
        <Label fx:id="titulo" layoutX="420.0" layoutY="30.0" styleClass="titulo" text="Lista de clientes deudores">
            <font>
                <Font size="38.0" />
            </font>
        </Label>
        
        <!-- Tabla principal de clientes deudores -->
        <TableView fx:id="tablaClientes" layoutX="55.0" layoutY="113.0" prefHeight="480.0" prefWidth="1518.0" styleClass="tablaVenta">
            <columns>
                <TableColumn fx:id="colNombre" prefWidth="250.0" text="Nombre/Alias" />
                <TableColumn fx:id="colCelular" prefWidth="140.0" text="Celular" />
                <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total ($)" />
                <TableColumn fx:id="colAbonado" prefWidth="150.0" text="Pago a cuenta ($)" />
                <TableColumn fx:id="colFecha" prefWidth="130.0" text="Fecha" />
                <TableColumn fx:id="colResto" prefWidth="150.0" text="Resto a pagar ($)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        
        <!-- Botones de acción -->
        <Button fx:id="btnVerDetalle" layoutX="55.0" layoutY="620.0" mnemonicParsing="false" styleClass="boton" text="Ver detalle" />
        <Button fx:id="btnAgregarPago" layoutX="164.0" layoutY="620.0" mnemonicParsing="false" styleClass="boton" text="Agregar pago" />
        <Button fx:id="btnFinalizarDeuda" layoutX="312.0" layoutY="620.0" mnemonicParsing="false" styleClass="boton" text="Finalizar deuda" />
        
        <!-- Separador visual -->
        <Label layoutX="55.0" layoutY="680.0" prefHeight="3.0" prefWidth="1518.0" styleClass="fondoTitulo" text="" />
        
        <!-- Tabla de detalle de productos -->
        <TableView fx:id="tablaProductos" layoutX="55.0" layoutY="740.0" prefHeight="280.0" prefWidth="1518.0" styleClass="tablaVuelto">
            <columns>
                <TableColumn fx:id="colProducto" prefWidth="400.0" text="Producto" />
                <TableColumn fx:id="colPrecioUnit" prefWidth="150.0" text="Precio unit. ($)" />
                <TableColumn fx:id="colPeso" prefWidth="120.0" text="Peso/Cant." />
                <TableColumn fx:id="colTotalProd" prefWidth="150.0" text="Total ($)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        
        <!-- Información del cliente seleccionado -->
        <Label fx:id="lblClienteInfo" layoutX="55.0" layoutY="698.0" styleClass="medioPago" text="Cliente:">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
      <Label fx:id="lblClienteInfo1" layoutX="143.0" layoutY="698.0" styleClass="medioPago" text="Nombre">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
        
 
        
    </children>
    
</AnchorPane>
