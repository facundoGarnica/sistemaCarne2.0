<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="600.0" minWidth="900.0" prefHeight="841.0" prefWidth="1400.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Cliente_pedidoController">

    <stylesheets>
        <URL value="@../styles/clientes_modern.css" />
    </stylesheets>

    <children>
        <!-- Main Container VBox para layout vertical responsive -->
        <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header Section COMPACTO -->
                <VBox styleClass="header-container">
                    <children>
                        <VBox alignment="CENTER" styleClass="main-header">
                            <padding>
                                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                            </padding>
                            <children>
                                <Label styleClass="header-title" text="Gestión de Pedidos">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>

                        <!-- Search Section más compacta -->
                        <HBox alignment="CENTER_LEFT" styleClass="search-section">
                            <padding>
                                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                            </padding>
                     <children>
                        <Label prefHeight="30.0" prefWidth="200.0" text="Crear pedido:">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Button maxWidth="Infinity" minWidth="108.0" onAction="#difuminarTodo" prefHeight="32.0" prefWidth="150.0" styleClass="btn-action" text="Generar pedido" />
                     </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Main Content Area con distribución vertical mejorada -->
                <VBox prefWidth="1400.0" spacing="15.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        
                        <!-- Panel Superior - Lista de Clientes HORIZONTAL -->
                        <VBox maxHeight="265.0" minHeight="180.0" prefHeight="265.0" prefWidth="1360.0" styleClass="clients-panel">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label styleClass="section-title" text="Lista de Clientes">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                        <CheckBox fx:id="checkTelefono" mnemonicParsing="false" prefHeight="25.0" text="Ocultar teléfono" />
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" />
                                    </VBox.margin>
                                </HBox>
      
                                <!-- Tabla de clientes más compacta -->
                                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="150.0" styleClass="clients-scroll" VBox.vgrow="ALWAYS">
                                    <content>
                                        <TableView fx:id="tablaClientes" prefHeight="122.0" prefWidth="1314.0" styleClass="modern-table">
                                            <columns>
                                                <TableColumn fx:id="colNombre" minWidth="200.0" prefWidth="300.0" text="Nombre" />
                                                <TableColumn fx:id="colCelular" minWidth="150.0" prefWidth="200.0" text="Celular" />
                                            </columns>
                                            <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                            </columnResizePolicy>
                                        </TableView>
                                    </content>
                                </ScrollPane>
                            </children>
                        </VBox>

                        <!-- Panel Inferior - Detalles del Cliente MÁS GRANDE -->
                        <VBox minHeight="400.0" prefHeight="459.0" prefWidth="1360.0" styleClass="details-panel" VBox.vgrow="ALWAYS">
                            <children>
                                <!-- Header de detalles -->
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label styleClass="section-title" text="Pedidos del Cliente Seleccionado" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="10.0" />
                                    </VBox.margin>
                                </HBox>

                                <!-- TabPane con MÁS ESPACIO para las tablas -->
                                <TabPane styleClass="modern-tabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                                    <tabs>
                                        <!-- Tab Pedidos con columnas MÁS ANCHAS -->
                                        <Tab styleClass="tab-fiados" text="Pedidos">
                                            <content>
                                                <VBox styleClass="tab-content">
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding>
                                                    <children>
                                                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                                            <content>
                                                                <TableView fx:id="tablaPedidos" prefHeight="227.0" prefWidth="1266.0" styleClass="modern-table">
                                                                    <columns>
                                                                        <!-- COLUMNAS MÁS ANCHAS Y MEJOR DISTRIBUIDAS -->
                                                                        <TableColumn fx:id="colFechaPedido" minWidth="120.0" prefWidth="150.0" text="Fecha Pedido" />
                                                                        <TableColumn fx:id="colMonto" minWidth="100.0" prefWidth="120.0" text="Total aproximado" />
                                                                        <TableColumn fx:id="colSena" minWidth="100.0" prefWidth="120.0" text="Señas" />
                                                                        <TableColumn fx:id="colResto" minWidth="100.0" prefWidth="120.0" text="Resto aproximado" />
                                                                        <TableColumn fx:id="colEstado" minWidth="100.0" prefWidth="120.0" text="Estado" />
                                                                        <TableColumn fx:id="colDiaEntrega" minWidth="120.0" prefWidth="150.0" text="Fecha Entrega" />
                                                                    </columns>
                                                                    <columnResizePolicy>
                                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                                    </columnResizePolicy>
                                                                </TableView>
                                                            </content>
                                                        </ScrollPane>
                                                        
                                                        <!-- Botones reorganizados con HBox -->
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                            <VBox.margin>
                                                                <Insets top="10.0" />
                                                            </VBox.margin>
                                                            <children>
                                                                <Button onAction="#finalizarPedidoSeleccionado" prefHeight="35.0" prefWidth="140.0" styleClass="btn-action" text="Finalizar pedido" />
                                                                <!-- Espacio flexible para separar botones -->
                                                                <HBox HBox.hgrow="ALWAYS" />
                                                                <Button onAction="#borrarPedidoCompleto" prefHeight="38.0" prefWidth="228.0" styleClass="btn-delete" text="Borrar pedido seleccionado" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </Tab>

                                        <!-- Tab Señas -->
                                        <Tab styleClass="tab-anticipos" text="Señas">
                                            <content>
                                                <VBox styleClass="tab-content">
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding>
                                                    <children>
                                                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                                            <content>
                                                                <TableView fx:id="tblSenia" prefHeight="218.0" prefWidth="1266.0" styleClass="modern-table">
                                                                    <columns>
                                                                        <TableColumn fx:id="colFechaSenia" minWidth="120.0" prefWidth="150.0" text="Fecha" />
                                                                        <TableColumn fx:id="colHoraSenia" minWidth="80.0" prefWidth="100.0" text="Hora" />
                                                                        <TableColumn fx:id="colMontoSenia" minWidth="100.0" prefWidth="120.0" text="Monto" />
                                                                    </columns>
                                                                    <columnResizePolicy>
                                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                                    </columnResizePolicy>
                                                                </TableView>
                                                            </content>
                                                        </ScrollPane>
                                                        <!-- Botones reorganizados - Agregar a la izquierda, Borrar a la derecha -->
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                            <VBox.margin>
                                                                <Insets top="10.0" />
                                                            </VBox.margin>
                                                            <children>
                                                                <Button onAction="#invocarSpaAgregarSenia" prefHeight="38.0" prefWidth="150.0" styleClass="btn-action" text="Agregar Seña" />
                                                                <!-- Espacio flexible para separar botones -->
                                                                <HBox HBox.hgrow="ALWAYS" />
                                                                <Button onAction="#borrarSenia" prefHeight="38.0" prefWidth="210.0" styleClass="btn-delete" text="Borrar Seña seleccionada" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </Tab>

                                        <!-- Tab Productos -->
                                        <Tab styleClass="tab-productos" text="Productos">
                                            <content>
                                                <VBox styleClass="tab-content">
                                                    <padding>
                                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                                    </padding>
                                                    <children>
                                                        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                                                            <content>
                                                                <TableView fx:id="tblProductos" prefHeight="261.0" prefWidth="1282.0" styleClass="modern-table">
                                                                    <columns>
                                                                        <TableColumn fx:id="colProducto" minWidth="150.0" prefWidth="200.0" text="Producto" />
                                                                        <TableColumn fx:id="colPrecio" minWidth="80.0" prefWidth="100.0" text="Precio" />
                                                                        <TableColumn fx:id="colCantidad" minWidth="80.0" prefWidth="100.0" text="Cantidad" />
                                                                        <TableColumn fx:id="colUnidadMedida" minWidth="80.0" prefWidth="100.0" text="Unidad de medida" />
                                                                        <TableColumn fx:id="colTotal" minWidth="100.0" prefWidth="120.0" text="Total" />
                                                                    </columns>
                                                                    <columnResizePolicy>
                                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                                    </columnResizePolicy>
                                                                </TableView>
                                                            </content>
                                                        </ScrollPane>
                                                        <!-- Botones reorganizados - Agregar a la izquierda, Borrar a la derecha -->
                                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                            <VBox.margin>
                                                                <Insets top="10.0" />
                                                            </VBox.margin>
                                                            <children>
                                                                <Button fx:id="AgregarProducto" onAction="#invocarSpaAgregarUnProducto" prefHeight="38.0" prefWidth="150.0" styleClass="btn-action" text="Agregar Producto" />
                                                                <!-- Espacio flexible para separar botones -->
                                                                <HBox HBox.hgrow="ALWAYS" />
                                                                <Button fx:id="borrarProducto" onAction="#borrarProducto" prefHeight="38.0" prefWidth="234.0" styleClass="btn-delete" text="Borrar producto seleccionado" />
                                                            </children>
                                                        </HBox>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </Tab>
                                    </tabs>
                                </TabPane>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Panel de difuminado (modal) - Sin cambios -->
        <AnchorPane fx:id="difuminar" disable="true" styleClass="modal-overlay" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane fx:id="overlayPedido" layoutY="13.0" maxWidth="1300.0" minWidth="400.0" prefHeight="768.0" prefWidth="1300.0" styleClass="modal-content" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="13.0" />
            </children>
        </AnchorPane>
        <AnchorPane fx:id="difuminar3" disable="true" layoutX="8.0" layoutY="8.0" prefHeight="837.0" prefWidth="1388.0" AnchorPane.bottomAnchor="-2.0" AnchorPane.leftAnchor="6.0" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="6.0">
            <children>
                <AnchorPane fx:id="overLayAgregarUnProducto" layoutX="409.0" layoutY="194.0" prefHeight="468.0" prefWidth="513.0" />
            </children>
        </AnchorPane>
        <AnchorPane fx:id="difuminar1" disable="true" layoutX="10.0" layoutY="10.0" styleClass="modal-overlay" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane fx:id="overLayAgregarSenia" layoutY="204.0" prefHeight="564.0" prefWidth="611.0" AnchorPane.leftAnchor="509.0" />
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
