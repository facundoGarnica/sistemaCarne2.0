<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Conexión a H2 en C:/SistemaCarne/data -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:file:C:/SistemaCarne/data/carnedb;AUTO_SERVER=TRUE;DB_CLOSE_DELAY=-1</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        
        <!-- Dialecto para H2 -->
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        
        <!-- Mostrar SQL en consola -->
        <property name="show_sql">false</property>
        
        <!-- Crear tablas automáticamente -->
        <property name="hbm2ddl.auto">update</property>
        
        <!-- Pool de conexiones -->
        <property name="hibernate.connection.pool_size">5</property>
        
        <!-- Contexto de sesión -->
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.format_sql">false</property>
        
        <!-- Clases mapeadas -->
        <mapping class="model.CajonPollo"/>
        <mapping class="model.Cliente"/>
        <mapping class="model.DetalleCajonPollo"/>
        <mapping class="model.DetalleMediaRes"/>
        <mapping class="model.DetallePedido"/>
        <mapping class="model.DetalleVenta"/>
        <mapping class="model.Fiado"/>
        <mapping class="model.FiadoParcial"/>
        <mapping class="model.MediaRes"/>
        <mapping class="model.Pedido"/>
        <mapping class="model.Producto"/>
        <mapping class="model.Stock"/>
        <mapping class="model.Venta"/>
        
    </session-factory>
</hibernate-configuration>
