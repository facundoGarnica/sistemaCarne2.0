<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="1080.0" prefWidth="1920.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MenuController">
    <stylesheets>
        <URL value="@../styles/menu.css" />
    </stylesheets>
   <children>
      <!-- Barra Lateral -->
      <AnchorPane fx:id="barraLateral" prefHeight="1080.0" prefWidth="320.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox fx:id="menuContainer" prefWidth="320.0" spacing="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
               <children>
                  
                  <!-- Header del Menú -->
                  <Label styleClass="menu-header" text="SISTEMA DE VENTAS">
                     <VBox.margin>
                        <Insets bottom="20.0" left="15.0" right="15.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  
                  <!-- Sección Stock/Inventario -->
                  <VBox fx:id="stockSection" styleClass="menu-section">
                     <children>
                        <Button fx:id="btnStock" mnemonicParsing="false" onAction="#toggleStockMenu" prefWidth="320.0" styleClass="menu-button-main" text="📊 INVENTARIO">
                        </Button>
                        
                        <VBox fx:id="stockSubmenu" styleClass="submenu" visible="false">
                           <children>
                              <Button fx:id="btnMediaRes" mnemonicParsing="false" onAction="#handleMediaRes" prefWidth="300.0" styleClass="submenu-button" text="🐄 Stock Media Res" />
                              <Button fx:id="btnPollo" mnemonicParsing="false" onAction="#handlePollo" prefWidth="300.0" styleClass="submenu-button" text="🐔 Stock Pollo" />
                              <Button fx:id="btnIngresarIndividual" mnemonicParsing="false" onAction="#handleIngresarIndividual" prefWidth="300.0" styleClass="submenu-button" text="➕ Ingreso Individual" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Sección Ventas -->
                  <VBox fx:id="ventasSection" styleClass="menu-section">
                     <children>
                        <Button fx:id="btnVentas" mnemonicParsing="false" onAction="#toggleVentasMenu" prefWidth="320.0" styleClass="menu-button-main" text="💰 VENTAS">
                        </Button>
                        
                        <VBox fx:id="ventasSubmenu" styleClass="submenu" visible="false">
                           <children>
                              <Button fx:id="btnCrearVenta" mnemonicParsing="false" onAction="#handleCrearVenta" prefWidth="300.0" styleClass="submenu-button" text="➕ Nueva Venta" />
                              <Button fx:id="btnHistorialVentas" mnemonicParsing="false" onAction="#handleHistorialVentas" prefWidth="300.0" styleClass="submenu-button" text="📈 Historial y Reportes" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Sección Cliente -->
                  <VBox fx:id="clienteSection" styleClass="menu-section">
                     <children>
                        <Button fx:id="btnCliente" mnemonicParsing="false" onAction="#toggleClienteMenu" prefWidth="320.0" styleClass="menu-button-main" text="👤 CLIENTES">
                        </Button>
                        
                        <VBox fx:id="clienteSubmenu" styleClass="submenu" visible="false">
                           <children>
                              <Button fx:id="btnFiado" mnemonicParsing="false" onAction="#handleFiado" prefWidth="300.0" styleClass="submenu-button" text="💳 Gestión de Fiado" />
                              <Button fx:id="btnPedido" mnemonicParsing="false" onAction="#handlePedido" prefWidth="300.0" styleClass="submenu-button" text="📋 Gestión de Pedidos" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
                  <!-- Sección Producto -->
                  <VBox fx:id="productoSection" styleClass="menu-section">
                     <children>
                        <Button fx:id="btnProducto" mnemonicParsing="false" onAction="#toggleProductoMenu" prefWidth="320.0" styleClass="menu-button-main" text="📦 PRODUCTOS">
                        </Button>
                        
                        <VBox fx:id="productoSubmenu" styleClass="submenu" visible="false">
                           <children>
                              <Button fx:id="btnVisualizarProductos" mnemonicParsing="false" onAction="#handleVisualizarProductos" prefWidth="300.0" styleClass="submenu-button" text="👁️ Catálogo de Productos" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  
               </children>
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
      
      <!-- Área de Contenido Principal -->
      <AnchorPane fx:id="contenidoPrincipal" styleClass="content-area" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="320.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
           
            
            <!-- Overlay para contenido dinámico -->
            <AnchorPane fx:id="overlayClientes" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
      
   </children>
</AnchorPane>