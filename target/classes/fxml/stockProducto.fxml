<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane id="AnchorPane" prefHeight="800.0" prefWidth="1200.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StockProductoController">
    <stylesheets>
        <URL value="@../styles/stock.css" />
    </stylesheets>
    
    <children>
        <GridPane hgap="10.0" layoutX="372.0" layoutY="99.0" styleClass="gridPanel" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints minWidth="100.0" prefWidth="150.0" />
                <ColumnConstraints minWidth="150.0" prefWidth="100.0" />
                <ColumnConstraints minWidth="100.0" prefWidth="0.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="35.0" prefHeight="30.0" />
                <RowConstraints minHeight="35.0" prefHeight="30.0" />
                <RowConstraints minHeight="35.0" prefHeight="30.0" />
                <RowConstraints minHeight="35.0" prefHeight="30.0" />
                <RowConstraints minHeight="40.0" prefHeight="40.0" />
            </rowConstraints>
            
            <Label text="Producto:" />
            <ComboBox fx:id="cbxSeleccionProducto" onAction="#mostrarStockProducto" prefHeight="33.0" prefWidth="164.0" GridPane.columnIndex="1" />
            
            <Label prefHeight="33.0" prefWidth="214.0" text="Stock actual:" GridPane.rowIndex="1" />
            <Label fx:id="labelStock" prefHeight="33.0" prefWidth="150.0" text="--" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Agregar stock:" GridPane.rowIndex="2" />
            <TextField fx:id="txtAgregarStock" promptText="Ingresar Kg o unidad" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Button onAction="#GuardarOEditar" styleClass="boton" text="Guardar" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Label prefHeight="33.0" prefWidth="214.0" text="Cant. minima:" GridPane.rowIndex="3" />
         <TextField fx:id="txtCantidadMinima" prefHeight="21.0" prefWidth="150.0" promptText="Ingresar cantidad" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </GridPane>
         
            <Label layoutX="383.0" layoutY="30.0" styleClass="titulo" text="Cargar stock en productos" />
      <TableView fx:id="tablaStock" layoutX="123.0" layoutY="379.0" prefHeight="318.0" prefWidth="966.0" styleClass="tablaVenta">
        <columns>
          <TableColumn fx:id="colProducto" prefWidth="75.0" text="Nombre" />
          <TableColumn fx:id="colCantidad" prefWidth="75.0" text="Cantidad en stock" />
          <TableColumn fx:id="colCantidadMinima" prefWidth="75.0" text="Cantidad minima para alerta" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="891.0" layoutY="716.0" onAction="#cargarParaEditar" styleClass="boton" text="Editar stock del producto" />
      <Button layoutX="706.0" layoutY="716.0" onAction="#borrarSeleccionado" styleClass="boton" text="Borrar seleccionado" />
    </children>
</AnchorPane>
