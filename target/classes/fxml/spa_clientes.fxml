<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="518.0" prefWidth="848.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Spa_clientesController">
    <stylesheets>
        <URL value="@../styles/clientes.css" />
    </stylesheets>
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <children>
            <!-- Tabla de pagos -->
            <TableView fx:id="tablaPagos" prefHeight="400.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="columnaFecha" minWidth="120.0" prefWidth="150.0" text="Fecha" />
                <TableColumn fx:id="columnaPago" minWidth="150.0" prefWidth="250.0" text="Pago otorgado" />
                <TableColumn fx:id="columnaFormaPago" minWidth="150.0" prefWidth="200.0" text="Forma de pago" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <!-- Panel de botones -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Button fx:id="btnAgregarPago" onAction="#difuminarTodo" prefHeight="45.0" prefWidth="237.0" styleClass="boton" text="Agregar pago a cuenta" />
                  <Button fx:id="btnEliminarPago" prefHeight="45.0" prefWidth="224.0" styleClass="boton" text="Eliminar seleccionado" />
                  
                  <!-- Espaciador para empujar el botón regresar a la derecha -->
                  <HBox HBox.hgrow="ALWAYS" />
                  
                  <Button fx:id="btnRegresar" onAction="#cerrarOverlay" prefHeight="45.0" prefWidth="156.0" styleClass="boton" text="← Regresar" />
               </children>
               <padding>
                  <Insets bottom="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      
      <!-- Overlay para modal -->
      <AnchorPane fx:id="difuminar" disable="true" style="-fx-background-color: rgba(0,0,0,0.5);" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <AnchorPane fx:id="overlayMonto" prefHeight="420.0" prefWidth="500.0" styleClass="modal-content" AnchorPane.leftAnchor="174.0" AnchorPane.rightAnchor="174.0" AnchorPane.topAnchor="49.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
