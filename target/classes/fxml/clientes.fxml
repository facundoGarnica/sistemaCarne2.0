<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorPane" prefHeight="841.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientesController">

    <stylesheets>
        <URL value="@../styles/clientes_modern.css" />
    </stylesheets>

    <children>
        <!-- Header Principal -->
        <VBox styleClass="header-container" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER" styleClass="main-header">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <Label styleClass="header-title" text="Gestión de Clientes">
                            <font>
                                <Font size="32.0" />
                            </font>
                        </Label>
                        <Label styleClass="header-subtitle" text="Sistema integral de administración de clientes y fiados">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <!-- Search Section -->
                <HBox alignment="CENTER" prefHeight="115.0" prefWidth="1400.0" styleClass="search-section">
                    <padding>
                        <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
                    </padding>
                    <children>
                        <TextField fx:id="txtBuscarCliente" promptText="Buscar por nombre, alias o celular..." styleClass="search-input" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="btnBuscar" styleClass="btn-primary" text="Buscar">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="btnLimpiar" styleClass="btn-secondary" text="Limpiar" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Main Content Area -->
        <HBox layoutY="240.0" prefHeight="640.0" prefWidth="1340.0" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="240.0">
            <children>
                <!-- Left Panel - Lista de Clientes -->
                <VBox prefHeight="581.0" prefWidth="651.0" styleClass="clients-panel" HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="section-title" text="Lista de Clientes">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </Label>

                        <!-- ScrollPane para la lista de clientes -->
                        <ScrollPane fitToWidth="true" prefHeight="458.0" prefWidth="530.0" styleClass="clients-scroll" VBox.vgrow="ALWAYS">
                     <content>
                        <TableView fx:id="tblClientes" prefHeight="479.0" prefWidth="526.0" styleClass="modern-table">
                          <columns>
                            <TableColumn fx:id="colNombre" prefWidth="75.0" text="Nombre" />
                            <TableColumn fx:id="colAlias" prefWidth="75.0" text="Alias" />
                              <TableColumn fx:id="colCelular" prefWidth="75.0" text="Celular" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- Right Panel - Detalles del Cliente -->
                <VBox prefHeight="581.0" prefWidth="926.0" styleClass="details-panel">
                    <children>
                        <!-- Header de detalles -->
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label styleClass="section-title" text="Detalles del Cliente" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Button fx:id="btnEditarCliente" styleClass="btn-small" text="Editar" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- Información del cliente seleccionado -->
                        <VBox fx:id="clientInfoContainer" styleClass="client-info-card">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label fx:id="lblClienteSeleccionado" styleClass="client-name" text="Seleccione un cliente para ver los detalles">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" />
                            </VBox.margin>
                        </VBox>

                        <!-- TabPane para detalles -->
                        <TabPane fx:id="tabPaneCliente" styleClass="modern-tabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                            <tabs>
                                <!-- Tab Fiados -->
                                <Tab styleClass="tab-fiados" text="Fiados">
                                    <content>
                                        <VBox styleClass="tab-content">
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                            <children>
                                                <TableView fx:id="tablaFiados" styleClass="modern-table" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn fx:id="colFecha" prefWidth="80.0" text="Fecha" />
                                                        <TableColumn fx:id="colHora" prefWidth="90.0" text="Hora" />
                                                        <TableColumn fx:id="colMonto" prefWidth="90.0" text="Monto" />
                                                        <TableColumn fx:id="colAnticipo" prefWidth="90.0" text="Anticipos" />
                                                        <TableColumn fx:id="colResto" prefWidth="90.0" text="Resto" />
                                                        <TableColumn fx:id="colEstado" prefWidth="80.0" text="Estado" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <VBox.margin>
                                                        <Insets top="15.0" />
                                                    </VBox.margin>
                                                    <children>
                                                        <Button fx:id="btnFinalizarFiado" styleClass="btn-action" text="Finalizar Fiado" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </Tab>

                                <!-- Tab Anticipos -->
                                <Tab styleClass="tab-anticipos" text="Anticipos">
                                    <content>
                                        <VBox styleClass="tab-content">
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                            <children>
                                                <TableView fx:id="tablaAnticipos" styleClass="modern-table" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn fx:id="colDiaAnticipo" prefWidth="100.0" text="Fecha" />
                                                        <TableColumn fx:id="colHoraAnticipo" prefWidth="90.0" text="Hora" />
                                                        <TableColumn fx:id="colDineroAnticipo" prefWidth="120.0" text="Monto" />
                                                        <TableColumn fx:id="colMedioAnticipo" prefWidth="100.0" text="Medio" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <VBox.margin>
                                                        <Insets top="15.0" />
                                                    </VBox.margin>
                                                    <children>
                                                        <Button styleClass="btn-action" text="Generar Anticipo" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </content>
                                </Tab>

                                <!-- Tab Productos -->
                                <Tab styleClass="tab-productos" text="Productos">
                                    <content>
                                        <VBox styleClass="tab-content">
                                            <padding>
                                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                            </padding>
                                            <children>
                                                <TableView fx:id="tablaProductos" styleClass="modern-table" VBox.vgrow="ALWAYS">
                                                    <columns>
                                                        <TableColumn fx:id="colNombreProducto" prefWidth="150.0" text="Producto" />
                                                        <TableColumn fx:id="colPrecio" prefWidth="70.0" text="Precio" />
                                                        <TableColumn fx:id="colPesoCantidad" prefWidth="80.0" text="Cantidad" />
                                                        <TableColumn fx:id="colTotal" prefWidth="70.0" text="Total" />
                                                    </columns>
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                                    </columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </content>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Panel de difuminado (modal) -->
        <AnchorPane fx:id="difuminar" disable="true" styleClass="modal-overlay" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane fx:id="spaDetalle" styleClass="modal-content" AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="200.0" />
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
