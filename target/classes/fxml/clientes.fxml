<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorPane" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ClientesController">

    <stylesheets>
        <URL value="@../styles/clientes.css" />
    </stylesheets>

    <children>
        <!-- Contenedor principal con VBox para layout vertical -->
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            
            <!-- Título -->
            <Label fx:id="titulo" alignment="CENTER" maxWidth="Infinity" styleClass="titulo" text="Lista de clientes fiados">
                <font>
                    <Font size="38.0" />
                </font>
            </Label>

            <!-- Apartado de Filtrado -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <Label fx:id="lblFiltrar" styleClass="medioPago" text="Buscar cliente:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                
                <TextField fx:id="txtFiltroCliente" prefWidth="250.0" promptText="Ingrese nombre o alias..." styleClass="campo-filtro" />
                
                <Button fx:id="btnLimpiarFiltro" prefWidth="85.0" styleClass="boton" text="Limpiar" />
            </HBox>

            <!-- Tabla principal -->
            <TableView fx:id="tablaClientes" prefHeight="300.0" styleClass="tablaVenta" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre/Alias" />
                    <TableColumn fx:id="colCelular" prefWidth="120.0" text="Celular" />
                    <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total ($)" />
                    <TableColumn fx:id="colAbonado" prefWidth="130.0" text="Pago a cuenta ($)" />
                    <TableColumn fx:id="colFecha" prefWidth="100.0" text="Fecha" />
                    <TableColumn fx:id="colResto" prefWidth="130.0" text="Resto a pagar ($)" />
                    <TableColumn fx:id="colPago" prefWidth="130.0" text="Finalizado" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Botones de acción -->
            <HBox spacing="15.0">
                <Button fx:id="btnVerDetalle" onAction="#difuminarTodo" styleClass="boton" text="Ver detalle" />
                <Button fx:id="btnFinalizarDeuda" styleClass="boton" text="Finalizar deuda" />
            </HBox>

            <!-- Cliente Info -->
            <HBox spacing="10.0">
                <Label fx:id="lblClienteInfo" styleClass="medioPago" text="Cliente:">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <Label fx:id="lblClienteInfo1" styleClass="medioPago" text="Nombre">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Tabla productos -->
            <TableView fx:id="tablaProductos" prefHeight="250.0" styleClass="tablaVuelto" VBox.vgrow="SOMETIMES">
                <columns>
                    <TableColumn fx:id="colProducto" prefWidth="300.0" text="Producto" />
                    <TableColumn fx:id="colPrecioUnit" prefWidth="120.0" text="Precio actual ($)" />
                    <TableColumn fx:id="colPeso" prefWidth="120.0" text="Peso/Cant." />
                    <TableColumn fx:id="colTotalProd" prefWidth="120.0" text="Total ($)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            
        </VBox>

        <!-- Panel de difuminado (modal) -->
        <AnchorPane fx:id="difuminar" disable="true" styleClass="difuminar" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane fx:id="spaDetalle" layoutX="182.0" prefHeight="378.0" prefWidth="784.0" AnchorPane.bottomAnchor="372.0" AnchorPane.leftAnchor="182.0" AnchorPane.rightAnchor="234.0" AnchorPane.topAnchor="50.0" />
            </children>
        </AnchorPane>

    </children>
</AnchorPane>
